import tkinter as tk
from tkinter import filedialog

def open_file_dialog():
    root = tk.Tk()
    root.withdraw() 

    file_path = filedialog.askopenfilename(
        title="Select a Text File",
        filetypes=(("Text files", "*.txt"), ("All files", "*.*"))
    )

    if file_path:
        print("Selected file:", file_path)
        return file_path
    else:
        return None
